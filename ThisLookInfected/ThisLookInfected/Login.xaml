<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThisLookInfected.Login">
    <ContentPage.Content>
        <StackLayout Padding="5">
            <Label Text="Email" />
            <Entry />
            <Label Text="Password" />
            <Entry IsPassword="True"/>
            <Grid>
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
                <Label Text="Forgot your password? Enter your email above and tap here." Grid.Row="0" Grid.Column="0" x:Name="ForgotPassword"/>
                <Button Text="Login" HorizontalOptions="EndAndExpand" Grid.Row="0" Grid.Column="1" Clicked="Button_Clicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>