<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThisLookInfected.SignUp">
    <ContentPage.Content>
        <StackLayout Padding="5">
            <Label Text="Email?* (Required)" />
            <Entry />
            <Label Text="Name?* (Required)" />
            <Entry />
            <Label Text="Password?* (Required)" />
            <Entry IsPassword="True"/>
            <Label Text="Confirm Password?* (Required)" />
            <Entry IsPassword="True"/>
            <Label Text="Tell Us About You?" />
            <Editor MinimumHeightRequest="200"  />
            <Button Text="Register?" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>