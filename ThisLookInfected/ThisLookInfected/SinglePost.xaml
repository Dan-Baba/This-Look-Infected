<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThisLookInfected.SinglePost"
             Title="{Binding Post.Title}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Image Source="{Binding Post.Image}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="^" HorizontalOptions="CenterAndExpand" />
                <Label Text="{Binding Post.CommentCount, StringFormat='Comment(s) {0:F0}'}" HorizontalOptions="CenterAndExpand" />
                <Button Text="~" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>